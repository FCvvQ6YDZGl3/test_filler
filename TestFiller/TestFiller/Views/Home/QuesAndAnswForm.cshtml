@model TestFiller.Models.QuestionAndAnswersInput

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>QuesAndAnswerForm</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center">
            <h4>
                Добавление нового вопроса
            </h4>
        </div>
        <div class="panel-body">
            <form class="p-1-a" asp-action="QuesAndAnswForm" method="post">
                <div class="form-group">
                    <label asp-for="themeId">Для какой темы создается вопрос:</label>
                    <select asp-for="themeId">
                        <option value="">Выберите тему</option>
                        @foreach (Theme theme in Model.themes)
                        {
                            <option value="@theme.id">@theme.title</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="questionText">Текст вопроса</label>
                    <textarea asp-for="questionText" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="answerText1">Вариант ответа 1 (правильный)</label>
                    <input asp-for="answerText1" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="answerText2">Вариант ответа 2</label>
                    <input asp-for="answerText2"  class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="answerText3">Вариант ответа 3</label>
                    <input asp-for="answerText3" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="answerText4">Вариант ответа 4</label>
                    <input asp-for="answerText4" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="answerText5">Вариант ответа 5</label>
                    <input asp-for="answerText5" class="form-control" />
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Добавить вопрос
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>